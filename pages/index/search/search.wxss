/*搜索框*/
.searchContainer {
  width: 100%;
  height: 80rpx;
  display: flex;
  padding-top: 15rpx;
  padding-left: 30rpx;
}
.searchContainer .searchtxt {
  width: 600rpx;
  height: 50rpx;
  border:1rpx solid rgb(240, 19, 19);
  border-radius: 100rpx;
  padding-left: 15rpx;
}
.suosuo {
  font-size: 50rpx;
  padding-left: 20rpx;
  color: rgb(240, 19, 19);
}

/*热搜*/
.hotContainer {
  display: flex;
}
.hotContainer .left {
  width: 50%;
  display: flex;
  flex-direction: column;
}
.hotContainer .right {
  width: 50%;
  display: flex;
  flex-direction: column;
}
.hotItem{
  padding-left: 30rpx;
  color: #666666;
}