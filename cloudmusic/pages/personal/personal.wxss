/* pages/personal/personal.wxss */
.userContainer {
    width: 94%;
    height: 150rpx;
    padding-left: 20rpx;
    margin-left: 10rpx;
    margin-top: 10rpx;
    border-radius: 10rpx;
    display: flex;
    background: #fbfbfb;
}
.userContainer image {
    width: 150rpx;
    height: 150rpx;
}
.userContainer .userInfo {
    width: 150rpx;
    display: flex;
    flex-direction: column;
    padding-top: 40rpx;
    padding-left: 20rpx;
}
.userName {
    font-size: 35rpx;
}
.userVip {
    font-size: 25rpx;
    color: #666666;
}
.navContainer {
    display: flex;
    margin-top: 20rpx;
}
.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}
.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 50rpx;
    color: rgb(240, 19, 19);
    margin: 20rpx 0;
}
.navItem text {
    font-size: 26rpx;
}
.collectionContainer {
    width: 94%;
    margin-top: 30rpx;
    padding-left: 20rpx;
    margin-left: 10rpx;
    display: flex;
    flex-direction: column;
    border-radius: 10rpx;
    background: #fbfbfb;
}
.collectionContent {
    padding-top: 15rpx;
}